<!-- Featured Categories -->
<section id="featured-categories" class="section featured-categories">
    <div class="container-fluid container-lg">
        <h2 class="section-title">Featured Categories</h2>
        <div class="owl-carousel category-carousel">
            @foreach (var category in Model.FeaturedCategories)
            {
                <div class="item">
                    <div class="card category-card">
                        <img src="https://via.placeholder.com/400x300/4a90e2/ffffff?text=@category.name" class="card-img" alt="@category.name">
                        <div class="card-img-overlay">
                            <!--<h5 class="card-title text-white">category.name</h5>-->
                            <a href="@Url.Action("Home", "Home", new { area = "Customer", categoryName = category.name })" class="btn btn-outline-light btn-sm">View Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Top Offers -->
<section class="section top-offers">
    <div class="container-fluid container-lg">
        <h2 class="section-title">Top Offers</h2>
        <div class="owl-carousel product-carousel">
            @foreach (var product in Model.TopOffers)
            {
                <div class="item">
                    <div class="card h-100">
                        <div class="product-badge badge-sale">Sale</div>
                        <img src="~/@(string.IsNullOrEmpty(product.img) ? $"https://via.placeholder.com/400x300/f39c12/ffffff?text={product.Name}" : product.img)" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">
                                <span class="text-danger">$@product.Price.ToString("F2")</span>
                                <span class="text-muted"><del>$@((product.Price * 1.2m).ToString("F2"))</del></span>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="@Url.Action("Details", "Home", new { area = "Customer", ProductID = product.Id })" class="btn btn-primary">View Details</a>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-star text-warning"></i>
                                    <span class="ms-1">@ViewBag.AverageRatings[product.Id].ToString("F1")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

